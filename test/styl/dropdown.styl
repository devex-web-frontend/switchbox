.dropDown {
	border-color: transparent;
	background-color: #49443f;
	color: #fff;
}
.dropDown--list {
	list-style-type: none;
	margin:0;
	padding:0;
	font-family: Arial;
	font-size: 14px;
	li {
		padding:4px 10px;
	}
}
.dropDown--option:hover, .dropDown--option-highlight {
	background-color: #315466;
	cursor: pointer;
}