$switchBoxArrowWidth ?= $selectArrowWidth ?= 22px;

.switchBox {
	box-sizing: border-box;
	position: relative;
	display: inline-block;
	vertical-align: middle;
	width: 100%;

	&--button {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: $switchBoxArrowWidth;

		button {
			display: block;
			width: 100%;
			height: 100%;
		}
	}
}